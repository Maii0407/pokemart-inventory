extends layout 

block content
  h1= title
  h2 ITEM NAME: #{ item.name }

  p #[strong ITEM DESCRIPTION:] #{ item.description }.

  p #[strong ITEM CATEGORY:]
    a( href=item.category.url ) #{ item.category.name }

  div 
    h4 ITEM IN STOCK 
    p #[strong Total in Stock:] #{ item_stock.length }

    div 
      each val in item_stock 
        div 
          a( href=val.url ) #[strong #{ item_stock.indexOf( val ) + 1 }.   ITEM ID:] #{ val._id }

      else 
        p This item is not available in stock.

  hr
  p 
    a( href=`${ item.url }/delete` ) Delete Item
  p
    a( href=`${ item.url }/update` ) Update Item