extends layout 

block content 
  h1= title
  h3 Category: #{ category.name }
  h3 Category Description: #{ category.description }.

  hr
  h3 Items in Category:
  .categoryItem-container
    each item in item_category 
      .categoryDetail-cards 
        a( href=item.url ) #{ item.name }
        p #{ item.description }.

    else
      p This category does not have items.

  hr
  p 
    a.delete-link( href=`${ category.url }/delete` ) Delete Category
  p 
    a.update-link( href=`${ category.url }/update` ) Update Category
