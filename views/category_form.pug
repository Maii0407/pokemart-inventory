extends layout 

block content 
  h1= title

  form( method='POST' action='' )
    .form-group 
      label( for='name' ) #[strong Category Name:] 
      input#name.form-control(
        type='text'
        placeholder='Enter New Category Name'
        name='name'
        value=( undefined === category ? '' : category.name )
      )
      label( for='description' ) #[strong Category Description:] 
      input#description.form-control(
        type='text'
        placeholder='Enter New Category Description'
        name='description'
        value=( undefined === category ? '' : category.description )
      )
    button( type='submit' ) Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg
